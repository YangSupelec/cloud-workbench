#!/bin/bash --login

<% delayed_job_bin = File.join(@options[:working_directory],
							   'bin',
							   'delayed_job' %>

exec 2>&1
exec <%= node[:runit][:chpst_bin] %> \
    -u <%= @options[:user] %>:<%= @options[:group] %> \
    -e <%= node[:runit][:sv_dir] %>/<%= @options[:app_name] %>/env \
    <%= delayed_job_bin %> \
    -E <%= @options[:rack_env] %>