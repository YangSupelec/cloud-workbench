# Workaround for Chef json merge as the vagrant override does not work here.
def string_from_file(file_path)
  fail "Do not apply secret config #{args.join(', ')}" unless APPLY_SECRET_CONFIG
  File.read(file_path)
rescue => e
  puts "WARNING: Config file at #{file_path} does not exist. #{e.message}"
  'NOT PROVIDED'
end

def string_from_config(config, *args)
  fail "Do not apply secret config #{args.join(', ')}" unless APPLY_SECRET_CONFIG
  result = config
  # Narrow down result
  args.each do |arg_item|
    result = result[arg_item]
  end
  fail "Config #{args.join(', ')} not present" if result.empty?
  result
rescue => e
  puts "WARNING: #{e.message}"
  'NOT PROVIDED'
end

def load_config(config_file)
  fail "Do not apply secret config #{args.join(', ')}" unless APPLY_SECRET_CONFIG
  YAML.load_file(config_file)
rescue => e
  puts "WARINING: No config file found in #{config_file}. #{e.message}"
  'CONFIG FILE NOT FOUND'
end

