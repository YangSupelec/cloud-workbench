<!-- Automatic element centering using js -->
<div class="center">
  <div class="headline text-center" id="time">
    <!-- Time auto generated by js -->
  </div>

  <div class="lockscreen-name">s.e.a.l.</div>

  <div class="lockscreen-item">
    <div class="lockscreen-image">
      <%= image_tag 'uzh-logo.svg', size: '215x215', alt: 's.e.a.l.' %>
    </div>

    <div class="lockscreen-credentials">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-group">
          <%= f.hidden_field :email, value: Rails.application.config.default_email %>
          <%= f.input :password, required: false, class: 'form-control', label: false, placeholder: 'password', autofocus: 'autofocus' %>
          <div class="input-group-btn">
            <%= button_tag(type: 'submit', class: 'btn btn-flat') do %>
              <%= fa_icon('arrow-right', class: 'text-muted') %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

