<h2>Execution of <%= link_to @benchmark_definition.name, @benchmark_definition %></h2>

<div class="container" id="benchmark_execution" data-id="<%= @benchmark_execution.id %>">
  <div class="span2">
    <span class="label label-default"><%= @benchmark_execution.status %></span>
  </div>
  <div class="span3">
    <p>
      <strong>Start time:</strong><br>
      <%= @benchmark_execution.start_time.present? ? @benchmark_execution.start_time.to_formatted_s(:db) : '-' %>
    </p>
  </div>
  <div class="span3">
    <p>
      <strong>End time:</strong><br>
      <%= @benchmark_execution.end_time.present? ? @benchmark_execution.end_time.to_formatted_s(:db) : '-' %>
    </p>
  </div>
</div>


<br>
<div class="container">
  <div class="span8">
    <div class="box">
      <header>
        <h5>Prepare log</h5>
        <div class="toolbar">
          <div class="btn-group">
            <a class="btn btn-default" id="prepareLogRefreshStart"><i class="fa fa-refresh"></i>&nbsp;Start live refresh</a>
            <a class="btn btn-success" style="display: none" id="prepareLogRefreshStop"><i class="fa fa-refresh fa-spin"></i>&nbsp;Stop live refresh</a>
            <a href="#prepareLogDiv" data-toggle="collapse" class="btn btn-sm btn-default minimize-box">
              <i class="fa fa-angle-up"></i>
            </a>
          </div>
        </div>
      </header>
      <div id="prepareLogDiv" class="collapse in">
        <%= text_area_tag :log, "@benchmark_execution.prepare_log", {:readonly => true, rows: "15", class: "form-control span8", id: "prepareLog"}%>
      </div>
    </div>
  </div>
  <br>
  <br>
  <div class="span8">
    <p>Release resources log</p>
    <%= text_area_tag :log, @benchmark_execution.release_resources_log, {:readonly => true, rows: "15", class: "form-control span8" }%>
  </div>
</div>
