<% if schedule.present? %>

  <div class="btn-group inline-flex">
    <div class="tooltip-options inline-flex">
      <%= benchmark_schedule_label(schedule, { class: 'schedule-align', title: schedule.cron_expression_in_english.html_safe }) %>
    </div>
    <button type="button" class="btn btn-default btn-xs dropdown-toggle schedule-align" data-toggle="dropdown">
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to "#{edit_icon}&nbsp;Edit".html_safe, edit_benchmark_schedule_path(schedule), class: 'edit-color' %></li>
      <li><%= toggle_benchmark_schedule_link(schedule) %></li>
    </ul>
  </div>

<% else %>

  <%= link_to new_benchmark_definition_benchmark_schedule_path(benchmark_definition), class: 'btn btn-default btn-xs' do %>
    <%= schedule_icon %>&nbsp;Create Schedule
  <% end %>

<% end %>