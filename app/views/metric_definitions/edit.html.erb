<h2>Edit <%= @metric_definition.name %></h2>

<%= simple_form_for(@metric_definition, html: {class: 'form-horizontal' }) do |f| %>
  <%= f.input :name %>
  <%= f.input :unit %>
  <%= f.input :scale_type, collection: MetricDefinition.scale_type.options, as: :radio_buttons %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>